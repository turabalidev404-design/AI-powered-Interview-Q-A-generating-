{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "frontend/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/index.html"
    }
  ]
}